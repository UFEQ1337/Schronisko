@model IEnumerable<Schronisko.Models.Animal>

@{
    ViewData["Title"] = "Pies";
}

<h1>Pies</h1>

<p>
    <a asp-action="Create">Dodaj nowego psa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ForAdoption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForAdoption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shelter.ShelterId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AnimalId">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.AnimalId">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.AnimalId">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
